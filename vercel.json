{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "outputDirectory": "dist",
        "installCommand": "npm install"
      }
    },
    {
      "src": "server/api/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/api/$1.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VITE_API_URL": "@vite_api_url",
    "SMTP_HOST": "@smtp_host",
    "SMTP_PORT": "@smtp_port",
    "SMTP_USER": "@smtp_user",
    "SMTP_PASS": "@smtp_pass",
    "ADMIN_EMAIL": "@admin_email",
    "FORM_ONE_SMTP_HOST": "@form_one_smtp_host",
    "FORM_ONE_SMTP_USER": "@form_one_smtp_user",
    "FORM_ONE_SMTP_PASS": "@form_one_smtp_pass",
    "FORM_TWO_SMTP_HOST": "@form_two_smtp_host",
    "FORM_TWO_SMTP_USER": "@form_two_smtp_user",
    "FORM_TWO_SMTP_PASS": "@form_two_smtp_pass"
  }
}